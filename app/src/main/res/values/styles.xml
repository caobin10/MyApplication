<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="srlStyle">@style/SmartStyle</item>-->

        <!--     datePickerDialogTheme 颜色  -->
<!--        <item name="android:datePickerDialogTheme" tools:ignore="NewApi">@style/MyDatePickerDialogTheme</item>-->

    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style parent="Widget.AppCompat.CompoundButton.RadioButton" name="RadioButton_no">
        <item name="buttonCompat">@null</item>
        <item name="android:background">@null</item>
    </style>
    <style parent="Widget.AppCompat.CompoundButton.CheckBox" name="CheckBox_no">
        <item name="buttonCompat">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorTextContent</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/textColorGray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Label.Title">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="AppTheme.Label.Description">
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">@dimen/dp_5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:singleLine">false</item>
    </style>
</resources>