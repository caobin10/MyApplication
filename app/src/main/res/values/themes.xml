<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--标题栏-->
        <item name="colorPrimary">@color/purple_500</item>
        <!--状态栏-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style parent="Widget.AppCompat.CompoundButton.RadioButton" name="RadioButton_no">
        <item name="buttonCompat">@null</item>
        <item name="android:background">@null</item>
    </style>
    <style parent="Widget.AppCompat.CompoundButton.CheckBox" name="CheckBox_no">
        <item name="buttonCompat">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorTextContent</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/textColorGray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Label.Title">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="AppTheme.Label.Description">
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">@dimen/dp_5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:singleLine">false</item>
    </style>
</resources>